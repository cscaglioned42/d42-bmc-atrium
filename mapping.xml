<meta>
    <settings>
        <atrium
                url="http://10.42.3.69:8008"
                user="admin"
                password="adm!nd42"
        />
        <device42
                url="https://10.42.2.241"
                user="admin"
                password="adm!nd42"/>
    </settings>


       <tasks>

        <task enable="true" description="Copy Servers from Device42 to BMC Atrium">
            <api>
                <target 
                    target="atrium" 
                    method="POST" 
                    update_method="PATCH" 
                    path="/api/cmdb/v1.0/bulk"
                />
                <resource 
                    model="device" 
                    target="device42" 
                    method="GET" 
                    extra-filter="" 
                    path="/api/1.0/devices/all/"
                />
            </api>

            <mapping 
                callback="from_d42" 
                key="device_id" 
                source="Devices" 
                class="BMC_ComputerSystem" 
                dataset="BMC.ASSET"
                namespace="BMC.CORE"
            >
                <field resource="device_id" type="string" target="Name"/>
                <field resource="serial_no" type="string" target="SerialNumber"/>
                <field resource="notes" type="string" target="Notes"/>
                <field resource="type" type="string" target="Type"/>
                <field resource="service_level" type="string" target="EnvironmentSpecification"/>
                <field resource="notes" type="string" target="Notes"/>

            </mapping>
        </task>
    </tasks>
</meta>